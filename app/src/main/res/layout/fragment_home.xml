<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="318dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="5dp"
        android:contentDescription="직지시장로고"

        android:src="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/notice_image3"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="공지"

                        android:src="@drawable/notice4" />

                    <ImageView
                        android:id="@+id/notice_image2"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="공지"

                        android:src="@drawable/notice3" />

                    <ImageView
                        android:id="@+id/notice_image"
                        android:layout_width="384dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="공지"

                        android:src="@drawable/notice2" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/activity_main_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                app:fontFamily="@font/batang_bold"
                android:text="주변 시장 찾아보기" />

            <Button
                android:id="@+id/activity_main_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                app:fontFamily="@font/batang_bold"
                android:text="전체 시장 조회" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="축산"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/meat" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="수산"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/fish" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="건어물"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/squid" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="야채"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/fruit" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="견과"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/nut" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="먹거리"
                    android:scaleType="fitXY"
                    android:background="@android:color/white"
                    app:srcCompat="@drawable/food" />

            </TableRow>


        </LinearLayout>
    </ScrollView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>